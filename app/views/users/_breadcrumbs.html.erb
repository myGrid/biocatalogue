<li><%= link_to 'Members', users_path -%></li>

<% if ["show", "new", "edit", "change_password"].include? controller.action_name.downcase -%>
  <li><b>&#187;</b></li>
  
  <% case controller.action_name.to_s; when "show" -%>
    <li><span><%= display_name(@user) -%></span></li>
  <% when "new" -%>
    <li><span>Sign Up</span></li>
	<% when "edit" -%>
		<li><span><%= link_to display_name(@user), user_path(@user) -%></span></li>
		<li><b>&#187;</b></li>
    <li><span>Edit Profile</span></li>
	<% when "change_password" -%>
		<li><span><%= link_to display_name(@user), user_path(@user) -%></span></li>
		<li><b>&#187;</b></li>
    <li><span>Change Password</span></li>
  <% else -%>
    <!-- no breadcrumb -->
  <% end -%>
<% end -%>
