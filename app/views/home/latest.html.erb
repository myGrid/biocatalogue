<h1>Latest in <%= SITE_NAME -%></h1>


<div id="home-tabs" class="tabberlive">

<%= tabs_tag(:builder => MenuTabBuilder, :namespace => :latest) do |tab| %>
    <%= tab.activity            'Activity', activity_latest_index_path %>
    <%= tab.monitoring          'Monitoring', monitoring_latest_index_path %>
    <%= tab.services            'Services', services_latest_index_path %>
    <%= tab.contributors        'Contributors', contributors_latest_index_path %>

<% end %>

  <% current_tab(:latest).to_s %>
  <% case current_tab(:latest).to_s %>
  <% when 'activity' %>
      <%= render :partial => "home/latest_tabs/tab_activity" %>
  <% when 'contributors' %>
      <%= render :partial => "home/latest_tabs/tab_contributors" %>
  <% when 'monitoring' %>
      <%= render :partial => "home/latest_tabs/tab_monitoring" %>
  <% when 'services' %>
      <%= render :partial => "home/latest_tabs/tab_services" %>
  <% else %>
      <%= render :partial => "home/latest_tabs/tab_activity" %>
  <% end %>
</div>
