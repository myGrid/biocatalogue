<span style="vertical-align: middle; font-weight: bold;">
	Sort by: 
</span>

<span style="vertical-align: middle; margin-left: 0.3em;">
	<select name="url_field" onchange="loadUrlFromSelectInputTag(this); return false;">
		<option value="<%= generate_sort_url('created', 'desc') -%>" <%= "selected" if is_sort_selected('created', 'desc') -%>>
			Newest
		</option>
		<option value="<%= generate_sort_url('created', 'asc') -%>" <%= "selected" if is_sort_selected('created', 'asc') -%>>
			Earliest
		</option>
		<% if logged_in? && current_user.is_curator? -%>
			<option value="<%= generate_sort_url('annotated', 'desc') -%>" <%= "selected" if is_sort_selected('annotated', 'desc') -%>>
				Annotated(High - Low)
			</option>
		<% end -%>
	</select>
</span>
