<% if flash[:error] %>

	<div id="error_flash">
		<% rounded nil, "#333", "auto" do %>
			<%= link_to_function image_tag("close.gif", :style => "float: right; margin-left: 1em;"), 
																		 visual_effect(:toggle_slide, "error_flash", :duration => 0.3) %>
			<span style="vertical-align: middle;"><%= flash[:error] %></span>
		<% end %>
	</div>
	
<% end %>

<% if flash[:notice] %>

	<div id="notice_flash">
		<% rounded nil, "#333", "auto" do %>
				<%= link_to_function image_tag("close.gif", :style => "float: right; margin-left: 1em;"), 
																			 visual_effect(:toggle_slide, "notice_flash", :duration => 0.3) %>
				<span style="vertical-align: middle;"><%= flash[:notice] %></span>
		<% end %>
	</div>
	
<% end %>