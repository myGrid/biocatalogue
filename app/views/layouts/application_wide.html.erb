<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	
	<%= render :partial => 'layouts/head' %>
	
	<body>
		<!-- Layout -->
  		<div id="header-region" class="clear-block"></div>
			
			<% if defined? HEADER_MESSAGE and !HEADER_MESSAGE.blank? %>
				<div id="header_message" class="box_info_standout" style="text-align: center; margin-top: -5px; margin-bottom: 0; padding: 3px; border: 0; color: #990000; display: none; font-size: 108%;">
					<%= white_list HEADER_MESSAGE -%>
				</div>
				<script>
					$('header_message').show();
				</script>
			<% end %>
			
			<%= render :partial => "widgets/last_search_notice" -%>
			
    	<div id="wrapper">

        <div id="header_container" style="background-image: url(../images/transparency/central_part_small.png);     max-height: 109px; padding-top: 8px ">
          <div id="header">
            <div id="logo-floater">
                <%= link_to image_tag(SITE_LOGO, :alt => SITE_BASE_HOST), "/" %>
            </div>

            <%= render :partial => "widgets/primary_links" -%>
            <%= render :partial => "widgets/login_links" -%>
            <br style="clear:both"/>

            <div id="bar" style="height: 44px; background: url(../images/transparency/central_bar_big.png) repeat-x 50% 0; margin-top: 2px">
              <div class="right-corner"><div class="left-corner">
                <%= render :partial => "widgets/login_box" -%>
                <%= render :partial => "widgets/action_bar" -%>
              </div></div>
            </div>
          </div> <!-- /header -->
        </div>

    		<div id="container" class="clear-block">

			    <div id="center"><div id="squeeze"><div class="right-corner"><div class="left-corner">
						<%= render :partial => "widgets/breadcrumbs_bar" -%>
          
						<div id="content">
							<%= render :partial => 'layouts/flashes' %>
								
							<%= yield -%>
						</div>        
          
          			<span class="clear"></span>
					
					<%= render :partial => "layouts/debug" if SHOW_DEBUG %>
					
				</div></div></div></div> <!-- /.left-corner, /.right-corner, /#squeeze, /#center -->      
			</div> <!-- /container -->
			<%= render :partial => "layouts/footer" -%>
		</div> <!-- /wrapper -->
		<!-- /layout -->
	</body>
</html>
