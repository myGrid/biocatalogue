%>

<%
	selected = is_filter_selected(filter_type, filter["name"])
	 
	text_to_display = get_text_to_display_for_filter_value(filter_type, filter["name"])
	text_tooltip = get_tooltip_text_for_filter_value(filter_type, filter["name"], selected)
	count = filter['count']
	
	url = selected ? generate_exclude_filter_url(filter_type, filter["name"]) : generate_include_filter_url(filter_type, filter["name"]) 
%>

<span class="container">
	
	<% if filter["name"] == BioCatalogue::Filtering::UNKNOWN_TEXT %>
	
		<span class="text" title="<%= tooltip_title_attrib(text_tooltip) -%>"><%= text_to_display -%></span>
			
		<% unless count.blank? %>
			<span class="faded count">(<%= count -%>)</span>
		<% end %>
		
	<% else %>
		
		<% link_to(url, :class => (selected ? "selected" : nil), :title => tooltip_title_attrib(text_tooltip)) do -%>
			
			<% if selected %>
				<span class="deselect">&nbsp</span>
			<% end %>
			
			<span class="text"><%= text_to_display-%></span>
			
			<% unless count.blank? %>
				<span class="faded count">(<%= count -%>)</span>
			<% end %>
			
		<% end %>
		
	<% end %>
	
</span>
