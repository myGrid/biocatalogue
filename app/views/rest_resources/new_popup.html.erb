%>

<div class="redbox_contents" style="width:700px;">
	<div class="head">
		<%= link_to_close_redbox image_tag("close.gif"), :style => "float:right; margin-left:0.5em; vertical-align:middle;" -%>
    <span style="vertical-align:middle;">Add New Endpoints</span>
	</div>
	
	<div class="body">
    <% form_for :rest_service, :url => {:controller => "rest_resources", 
                                        :action => "add_new_resources", 
                                        :rest_service_id => @rest_service.id } do |f| %>
    <%= f.error_messages %>

    <div>
			<div class="box_info_standout">
				<%= annotation_add_info_text("ignore", @rest_service) -%>				
			</div>

      <p class="step_text">
        List the parameterised endpoints provided (one per line):
      </p>

      <!--METHOD CAPTURE HELP BOX-->
      <%= render :partial => "rest_resources/help_box" -%>

      <!--METHOD CAPTURE TEXT AREA-->
      <p class="high_linespaced form_field_section">
        <%= text_area_tag "rest_resources", params[:rest_resources],
            :size => "50x7", :style => "width: 99%;" %>
      </p>
      
      <!--SUBMIT-->
      <p style="margin-top: 1.5em; text-align: center;">
        <%= f.submit "Submit", :disable_with => "Submitting..." -%>
				<%= button_to_function "Close", "RedBox.close()" -%>
      </p>

    </div>
  
  <% end %>
  
 	</div>
</div>
