%>

<div class="listings">
	<% items.each do |server| %>
			<div class="listing_item">
				<p class="name">
					<%= link_to(display_name(server), soaplab_server_path(server)) -%>
					<br />
					<span class="inline-block">
					<%= render :partial => "annotations/name_aliases",
										 :locals => { :annotatable => server,
													:name_annotations => all_alternative_name_annotations_for_soaplab_server(server) } -%>
					</span>
				</p>
				
				<br />
				<p>						
					<b>Submitter / Source:</b>
					<%= submitter_link(server.submitter) %>
					<span class="ago" style="vertical-align: baseline;">
						(<%= distance_of_time_in_words_to_now(server.created_at) -%> ago)
					</span>
				</p> 
				
				<br />
				<b>Wsdl Location :</b>
				<%= link_to(server.location, server.location) -%>
				<span class="faded" style="margin: 0 0.2em; vertical-align: middle;">|</span>
				
				<b><%= number_of_services_from_soaplab_server(server) -%></b> <%= link_to 'Services', soaplab_server_path(server) -%>
			
			</div>
	<% end %>
</div>
