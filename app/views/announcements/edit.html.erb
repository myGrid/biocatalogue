<h1>Editing Announcement</h1>

<% if !@announcement.nil? && !@announcement.errors.nil? then %>
    <% @announcement.errors.full_messages.each do |err|  %>
        <%= err %>
    <% end %>
<% end %>

<%=  form_for(:announcement, :url => announcement_path(@announcement), :html => { :method => :put }) do |form| %>
  <%= render :partial => 'form', :object => form %>
  <%= submit_tag 'Update', :disable_with => "Updating..." %>
<% end %>